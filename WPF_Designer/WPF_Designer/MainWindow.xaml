<Window x:Class="WPF_Designer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Designer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <LinearGradientBrush x:Key=         "backgroundBrush1"
                             StartPoint=    "0, 0"
                             EndPoint=      "1, 1">
            <GradientStop   Color="Yellow"
                            Offset="0.0"/>
            <GradientStop   Color="Red"
                            Offset="0.25"/>
            <GradientStop   Color="Blue"
                            Offset="0.75"/>
            <GradientStop   Color="LimeGreen"
                            Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Canvas Height="Auto" 
            Name="Canvas1" 
            Width="Auto" 
            Background="{StaticResource backgroundBrush1}">
        <Label Canvas.Left="20" 
               Canvas.Top="20" 
               Height="50" 
               Width="120"
               VerticalAlignment="Center"
               Name="Label1">
            Name:
        </Label>
        <Label Canvas.Left="22" 
               Canvas.Top="100" 
               Height="50" 
               Width="120" 
               VerticalAlignment="Center"
               Name="Label2">
            Password:
        </Label>
        <TextBox Canvas.Left="160" 
                 Canvas.Top="20" 
                 Height="50" 
                 Width="200" 
                 Name="TextBox1" />
        <TextBox Canvas.Left="162" 
                 Canvas.Top="100" 
                 Height="50" 
                 Width="200" 
                 Name="TextBox2" />
        <Button Canvas.Left="175" 
                Canvas.Top="194" 
                Height="50" 
                Width="75" 
                Name="Button1">
            Confirm</Button>
        <Button Canvas.Left="262" 
                Canvas.Top="194" 
                Height="50" 
                Width="75" 
                Name="Button2">
            Cancel</Button>
    </Canvas>

</Window>
