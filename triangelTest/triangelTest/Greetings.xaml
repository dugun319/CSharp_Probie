<Window x:Class="triangelTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:triangelTest"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock      HorizontalAlignment="Center" Height="50" Margin="0,100,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button" VerticalAlignment="Top" Width="300"/>
        <RadioButton    x:Name="HelloButton"   Content="Hello"     HorizontalAlignment="Left" Height="30" Margin="250,187,0,0" VerticalAlignment="Top" Width="120" IsChecked="True"/>
        <RadioButton    x:Name="GoodbyeButton" Content="GoodBye"   HorizontalAlignment="Left" Height="30" Margin="442,187,0,0" VerticalAlignment="Top" Width="120"/>
        <Button         Content="Display" HorizontalAlignment="Center" Height="50" Margin="0,300,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>

    </Grid>
</Window>